<nav-bar title="首页" statusBarColor="#42BD55" navBarColor="#42BD55" titleColor="#ffffff"></nav-bar>
<view>
    <mp-searchbar bindselectresult="selectResult" search="{{search}}"></mp-searchbar>
    <view class="row" wx:for="{{allMovies}}" wx:key="index">
        <view class="title-wraaper">
            <view class="title">{{item.title}}</view>
            <view class="title-right">
                <view class="more">查看更多</view>
                <view class="arrow"></view>
            </view>
        </view>
        <scroll-view scroll-x="{{true}}" class="scroll-view__movie">
            <!-- 组件 每一部电影 -->
            <movieItem class="item" wx:for="{{item.movies}}" wx:key="index" wx:for-item="movie" movie="{{movie}}"></movieItem>
        </scroll-view>
    </view>
</view>