.weui-search-bar{
    background-color: #42BD55 !important;
}
.row{
    margin-bottom: 30rpx;
}
.title-wraaper{
    display: flex;
    justify-content: space-between;
    margin-left: 30rpx;
    align-items: center;
}
.title-wraaper .title{
    font-weight: bold;
    font-size: 34rpx;
}
.title-right{
    display: flex;
    align-items: center;
    margin-right: 30rpx;
}
.title-right .more{
    font-size: 30rpx;
    color: #42bd55;
}
.title-right .arrow{
    width: 12rpx;
    height: 12rpx;
    border: 1px solid #42bd55;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
}
.scroll-view__movie{
    height: 402rpx;
    white-space: nowrap;
}

.scroll-view__movie .item{
    margin-left: 30rpx;
}