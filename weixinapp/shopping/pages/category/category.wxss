/* pages/category/category.wxss */
.main{
    width: 100%;
    height: 100%;
    display: flex;
}
.category-left{
    width: 150rpx;
    height: 1125rpx;
    border-right: 1rpx solid #d8d8d8;
}

.shop-category{
    width: 100%;
    height: 92rpx;
    padding: 30rpx 0 0 0;
    text-align: center;
}

.category-right{
    height: 1125rpx;
    width: 600rpx;
    padding: 40rpx;
    box-sizing: border-box;
}

.category-right__banner{
    height: 200rpx;
    width: 520rpx;
}

.category-right__banner image{
    width: 100%;
    height: 200rpx;
}

.category-right__title{
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.newest-list{
    display: inline-block;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-bottom: 40rpx;
}

.newest-list image{
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx 0 10rpx;
}

.category-right__page{
    height: 100vh;
}