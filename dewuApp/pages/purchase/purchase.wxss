.top-bar{
    padding: 15rpx 40rpx;
    display: flex;
}

.top-search{
    display: flex;
    background-color: #f5f5f9;
    border: 1rpx, solid,#000000;
    border-radius: 5rpx;
    text-align: center;
    width: 590rpx;
    height: 63rpx;
    margin-right: 35rpx;
    line-height: 63rpx;
}

.weui-input{
    line-height: 100px;
    height: 100%;
    text-align: left;
}

.top-allSorts__txt{
    display: flex;
    flex-direction: column;
    width: 48rpx;
    font-size: 10px;
    text-align: center;
    font-weight: bold;
    color: #01c2c3;
}

.top-allSorts__txt .all{
    font-size: 14px;
    font-family: serif;
}

.top-allSorts__txt .sort{
    letter-spacing: 5rpx;
}

.ad-banner{
    width: 100%;
}

.ad-banner image{
    width: 100%;
    height: 100%;
}

.sort-bar{
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.advertise{
    margin-top: 10rpx;
}

.server-bar{
    display: flex;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.server-info{
    flex: 1;
    line-height: 33rpx;
}

.server-info__img{
    display: inline-block;
    width: 33rpx;
    height: 33rpx;
}

.server-info image{
    height: 100%;
    width: 100%;
}

.server-info text{
    margin-left: 10rpx;
    height: 100%;
    font-size: 15px;
}