.top-bar{
    padding: 15rpx 40rpx;
    display: flex;
}

.top-search{
    display: flex;
    background-color: #f5f5f9;
    border: 1rpx, solid,#000000;
    border-radius: 5rpx;
    text-align: center;
    width: 590rpx;
    height: 63rpx;
    margin-right: 35rpx;
    line-height: 63rpx;
}

.weui-input{
    line-height: 100px;
    height: 100%;
    text-align: left;
}

.top-allSorts__txt{
    display: flex;
    flex-direction: column;
    width: 48rpx;
    font-size: 10px;
    text-align: center;
    font-weight: bold;
    color: #01c2c3;
}

.top-allSorts__txt .all{
    font-size: 14px;
    font-family: serif;
}

.top-allSorts__txt .sort{
    letter-spacing: 5rpx;
}

.ad-banner{
    width: 100%;
}

.ad-banner image{
    width: 100%;
    height: 100%;
}
